<% if user_signed_in? %>
<h1 class="text-center"> Créer un nouvel event !</h1>
<p class="text-center"> <%= current_user.email %>, merci de renseigner ces informations afin de créer votre événement ! </p>

<%= form_tag (events_path) do %>
 
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
        <% @event.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
  <p> <%= label_tag 'name', "Quel est le nom de votre event ?"  %> </p>
  <p> <%= text_field_tag(:title_event) %> </p>

  <p> <%= label_tag 'description', "En deux mots, pouvez-vous décrire votre event ?" %> </p>
  <p> <%= text_field_tag(:description_event) %> </p>

  <p> <%= label_tag 'country', "Quel pays ?" %> </p>
  <p> <%= text_field_tag(:country) %> </p>

  <p> <%= label_tag 'city', "Quel ville ?" %> </p>
  <p> <%= text_field_tag(:city) %> </p>

  <p> <%= label_tag 'nombre de place', "combier de place ?" %> </p>
  <p> <%= text_field_tag(:number_of_places) %> </p>

  <p> <%= label_tag 'prix', "Combien pour participer ?" %> </p>
  <p> <%= text_field_tag(:price) %> </p>

  <p> <%= label_tag 'place', "Quand se déroule votre event ?" %> </p>
  <p> <%= date_field_tag(:starting_date) %> </p>


  </div>
</div>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
<p> <%= submit_tag 'Je crée mon event', class: "btn btn-primary"%></p>

  </div>
</div>
<% end %>

<% else %>

Veuillez vous connecter pour creer un voyage LIEN

<% end %>