<!-- blog breadcrumb version one strat here -->
<section class="breadcrumb-blog-version-one">
  <div class="single-bredcurms" style="background-image:url('/assets/packages/bg.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="bredcrums-content">
            <h2>Events</h2>
            <ul>
              <li><a href="/">Home</a>
              </li>
              <li style="color:white;"><u>Events</u></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section><!-- blog breadcrumb version one end here -->


<section class="blog-contents-version-one pt-100 pb-70 popular-packages">
      <div class="container">
        <div class="row"><!--begin row -->
                <% @events.each do |event|%>
                              <div class="col-md-4 col-sm-6">
                                    <div class="single-package">
                                          <div class="package-image">

                                                <% if event.picture.attached? %>
                                                <%= image_tag event.picture, height: '360', width: '310', alt: "pics" %>
                                                <% else %>
                                                <img src="/assets/packages/4.jpg">
                                                <% end %>

                                          </div>
                                          <div class="package-content">
                                                <h3><%= truncate(event.title_event, :length => 28) %></h3>
                                                <p><%= event.city %>, <%= event.starting_date.strftime("%d-%m-%Y")%>,
                                                </p>
                                          </div>
                                          <div class="package-calto-action">
                                              <ul class="ct-action">
                                                <li><%= link_to "Voir l'événement", event_path(event), class: "travel-booking-btn hvr-shutter-out-horizontal" %>
                                                </li>
                                                <li><span><strong><%= event.price %> €</strong></span></li>
                                              </ul>
                                          </div>
                                    </div>
                              </div><!--end single package -->
                              <% end %>
          </div><!--end row -->

    <div class="row">
      <div class="col-sm-12 text-center">
        <ul class="pagination">
            <%= will_paginate @events, :container => false %>
        </ul>
      </div><!-- pagination end here -->
    </div>






        </div>
</section><!-- single popular destination  end-->
